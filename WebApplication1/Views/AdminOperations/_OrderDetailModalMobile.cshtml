@model OrderDetailModel

<div class="modal fade" id="modal-mobile-@Model.DivId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="min-width: 90%;">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Order #@Model.DivId details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-responsive table-sm">
                    @foreach (var item in Model.OrderDetail)
                    {
                        <tr>
                            <td>id: @item.ProductId | @item.Product.ProductTitle</td>
                            <td>@item.Product.ProductType.TypeTitle</td>
                            <td>@item.UnitPrice | @item.Quantity</td>
                            <td>@(item.Quantity * item.UnitPrice) £ </td>
                        </tr>
                    }
                    <tr style="width: 100%;margin-inline: auto; text-align: center;">
                        <td colspan="88" style="width: 100%;margin-inline: auto;">
                            Total:  @(Model.OrderDetail.Select(item => item.Product.Price * item.Quantity).Sum()) £
                        </td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
