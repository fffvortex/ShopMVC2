@model ProductDTO

<div style="width: 70%; margin-inline: auto;">
    <a class="btn btn-outline-success" asp-action="GetAllProducts" asp-controller="Product">Back</a>
    <form asp-action="AddProduct" enctype="multipart/form-data">
        <div class="my-2">
            <input maxlength="44" class="form-control" type="text" asp-for="ProductTitle" placeholder="Title" />
            <span asp-validation-for="ProductTitle" class="text-danger"></span>
        </div>

        <div class="my-2">
            <textarea maxlength="2000" rows="8" asp-for="Description" class="form-control" placeholder="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="my-2">
            <select class="form-control" asp-for="ProductTypeId" asp-items="Model.ProductTypeList">
                <option style="text-align:center" value="">Select type</option>
            </select>
            <span asp-validation-for="ProductTypeId" class="text-danger"></span>
        </div>

        <div style="display:flex; justify-content: space-between;" class="my-2">
            <div class="input-group">
                <span class="input-group-text">Price</span>
                <input style="text-align:center" type="number" asp-for="Price" class="form-control" aria-label="Dollar amount (with dot and two decimal places)">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            <div class="input-group">
                <input style="text-align:center" type="number" asp-for="Quantity" class="form-control" aria-label="Dollar amount (with dot and two decimal places)">
                <span asp-validation-for="Quantity" class="text-danger"></span>
                <span class="input-group-text">Quantity</span>
            </div>
        </div>

        <div class="my-2">
            <input type="file" oninput="previewImage(this.files[0])" class="form-control my-2" asp-for="ImageFile" />
            <img id="preview" style="width: 10rem; height: 11rem; border-radius: 10px;"src="~/img/No_Picture.jpg" />
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-success">Add product</button>
        </div>
    </form>
</div>

<script src="~/js/changeImg.js" asp-append-version="true"></script>