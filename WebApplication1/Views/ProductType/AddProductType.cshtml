@model ProductTypeDTO

<div style="text-align: center;">
    <div style="width: 50%;text-align: center;margin-inline: auto;">
        <a class="btn btn-outline-success" asp-action="GetAllProductTypes" asp-controller="ProductType">Back</a>
        <form asp-action="AddProductType">
            <div class="my-2">
                <input style="text-align: center;" type="text" class="form-control" asp-for="ProductTypeTitle" placeholder="Type name" />
                <span asp-validation-for="ProductTypeTitle" class="text-danger"></span>
            </div>

            <div class="my-2">
                <button type="submit" class="btn btn-success">Add</button>
            </div>
        </form>
    </div>
</div>
