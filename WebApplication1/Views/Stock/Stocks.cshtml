@model IEnumerable<StockDisplayModel>
@{
    ViewData["Title"] = "Stocks";
}

<form style="justify-content: space-between" asp-action="Stocks" method="get" class="my-2 d-flex">
    <a class="btn btn-outline-success" asp-action="Stocks" asp-controller="Stock">Clear</a>
    <input type="text" name="search" class="form-control w-25" placeholder="Search by product" />
    <a asp-action="Stocks" asp-controller="Stock" asp-route-sortByQuantity="quantity"><img style="height:20px;" src="/img/up.png" /></a>
    <a asp-action="Stocks" asp-controller="Stock" asp-route-sortByQuantity="descquantity"><img style="height:20px;" src="/img/down.png" /></a>
    <input type="number" name="id" class="form-control w-25" placeholder="Search by Id" />
    <button type="submit" class="btn btn-success">Find</button>
</form>

<table class="table table-striped table-responsive">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                Id: @item.ProductId | @item.ProductTitle
            </td>
            <td>@item.Quantity</td>
            <td>
                <a asp-action="ManageStock" asp-controller="Stock" asp-route-productId="@item.ProductId" class="btn btn-outline-success">Update stock</a>
            </td>
        </tr>
    }
</table>
